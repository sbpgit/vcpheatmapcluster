<mvc:View controllerName="vcpapp.heatmapcl.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f" displayBlock="true"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:fb="sap.ui.comp.filterbar">
    <f:DynamicPage id="idDynamicPageHP">
        <f:title>
            <f:DynamicPageTitle />
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <fb:FilterBar id="filterbar" clear="OnClear" showClearOnFB="true" persistencyKey="myPersKey" useToolbar="false" search="onApplyFilters">
                    <fb:filterGroupItems>
                        <fb:FilterGroupItem name="Location" mandatory="true" label="Location" groupName="Group1" visibleInFilterBar="true">
                            <fb:control>
                                <ComboBox id="mcLocation" selectionChange=".onLocationSelect" showSecondaryValues="true" items="{/items}">
                                    <core:ListItem key="{key}" text="{text}" additionalText ="{desc}" />
                                </ComboBox>
                            </fb:control>
                        </fb:FilterGroupItem>

                        <fb:FilterGroupItem name="Configuration Product" mandatory="true" label="Configuration Product" groupName="Group1" visibleInFilterBar="true">
                            <fb:control>

                                <ComboBox id="mcConfig" selectionChange=".onConfigSelect" showSecondaryValues="true" items="{/items}">
                                    <core:ListItem key="{key}" text="{text}" additionalText ="{desc}" />
                                </ComboBox>
                            </fb:control>
                        </fb:FilterGroupItem>
                        <fb:FilterGroupItem name="Product" label="Product" mandatory="true" groupName="Group1" visibleInFilterBar="true">
                            <fb:control>
                                <ComboBox id="mcProduct" selectionChange="onchageProd" showSecondaryValues="true" items="{/items}">
                                    <core:ListItem key="{key}" text="{text}" additionalText ="{desc}" />
                                </ComboBox>
                            </fb:control>
                        </fb:FilterGroupItem>
                        <fb:FilterGroupItem name="Year" mandatory="true" label="Year" groupName="Group1" visibleInFilterBar="true">
                            <fb:control>
                                <!-- <MultiComboBox busyIndicatorDelay="0" id="mcYear" selectionChange="onChangeYear" /> -->
                                <ComboBox busyIndicatorDelay="0" id="mcYear" selectionChange="onChangeYear" />
                            </fb:control>
                        </fb:FilterGroupItem>
                        <fb:FilterGroupItem name="Cluster" label="Cluster" groupName="Group1" visibleInFilterBar="true">
                            <fb:control>
                                <MultiComboBox id="mcCluster" showSelectAll="true" selectionFinish="onChnageCluster" />
                            </fb:control>
                        </fb:FilterGroupItem>
                        <fb:FilterGroupItem name="Primary" label="Primary ID" groupName="Group1" visibleInFilterBar="true">
                            <fb:control>
                                <MultiComboBox id="mcPrimary" showSelectAll="true" />
                            </fb:control>
                        </fb:FilterGroupItem>
                        <fb:FilterGroupItem name="Characteristic" label="Characteristic" groupName="Group1" visibleInFilterBar="true">
                            <fb:control>
                                <MultiComboBox id="mcChar" showSelectAll="true" />
                            </fb:control>
                        </fb:FilterGroupItem>
                        <!-- <fb:FilterGroupItem name="QUARTER" label="Quarter" groupName="Group1" visibleInFilterBar="true">
                        <fb:control>
                            <MultiComboBox id="idQuar" showSelectAll="true" />
                        </fb:control>
                    </fb:FilterGroupItem> -->
                    </fb:filterGroupItems>
                </fb:FilterBar>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox id="idPivotPagePOP" busyIndicatorDelay="0">
                <OverflowToolbar height="8%" id="toolBar" visible="{= ${oGModel>/showPivot} }">
                    <HBox alignItems="Center" class="sapUiTinyMarginBegin">
                        <HBox alignItems="Center" class="sapUiTinyMarginEnd">
                            <core:Icon src="sap-icon://circle-task-2" color="#0070F2" size="0.875rem" class="sapUiTinyMarginEnd" />
                            <Text text="PRPID" />
                        </HBox>
                        <HBox alignItems="Center">
                            <core:Icon src="sap-icon://circle-task-2" color="#000000" size="0.875rem" class="sapUiTinyMarginEnd" />
                            <Text text="Primary ID" />
                        </HBox>
                    </HBox>
                    <ToolbarSpacer />
                    <CheckBox id="idCharCheck" text="Hide Characteristic Values" selected="true" select="charHide" />
                    <CheckBox id="idPrp" text="PRPID" selected="false" select="checkPrp" />
                </OverflowToolbar>
                <!-- <table:Table visible="{= !${oGModel>/showPivot} }" width="100%" /> -->
                <html:div id="mainDivPOP" class="mainDivClass" />
            </VBox>
        </f:content>
    </f:DynamicPage>
</mvc:View>
